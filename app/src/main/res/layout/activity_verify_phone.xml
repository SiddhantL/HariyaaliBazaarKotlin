<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context=".VerifyPhoneActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/darkgreen">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/hb" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:text="Enter Verification Code"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/Black" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView1"
        android:layout_marginTop="5dp"
        android:layout_below="@id/textView"
        android:textColor="@color/Black"
        android:text="Enter The Code You Received Manually If The App Does Not Detect The Code" android:textAlignment="center" android:layout_marginRight="20dp" android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/editTextCode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:layout_centerHorizontal="true"
        android:digits="0123456789"
        android:hint="Verification Code"
        android:maxLength="6"
        android:textColor="@color/black"
        android:backgroundTint="@color/black"
        android:textColorHint="#262727"
        android:textAlignment="center" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:backgroundTint="@color/darkgreen"
        android:id="@+id/buttonSignIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/editTextCode"
        android:textColor="#ffffff"
        android:text="Sign Up"
        android:textAllCaps="false"/>

    <ProgressBar
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/progressbar"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonSignIn"
        android:visibility="gone"/>

</RelativeLayout>